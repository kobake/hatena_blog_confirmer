{
  "manifest_version": 2,
  "name": "はてなブログ投稿確認",
  "version": "1.0.3",
  "description": "はてなブログに投稿する前に確認ダイアログを出します",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
  ],
  "content_scripts": [
    {
      "matches": [
        "http://blog.hatena.ne.jp/*",
        "http://hatena.ne.jp/*",
        "http://*.hatena.ne.jp/*",
        "http://*.hatenablog.com/*"
      ],
      "js": [ "js/jquery-1.9.0.min.js", "js/content.js" ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
